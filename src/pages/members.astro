---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
import { members } from './members.js'; // メンバーデータ読み込み
import MemberCard from './membercard.astro'; // カードコンポーネント読み込み
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} />
  </head>
  <body>
    <Header />
    <main>
      <h2>ここはメンバーのページだよ！</h2>

      <div class="member-grid">
        {members.map(member => (
          <MemberCard {...member} />
        ))}
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  .member-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
    justify-content: center;
    margin-top: 1em;
  }

  main h2 {
    text-align: center;
    font-size: 1.5em;
    margin-top: 1em;
  }
</style>
